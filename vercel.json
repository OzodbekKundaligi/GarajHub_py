{
	"buildCommand": "npm run build || true",
	"installCommand": "npm install 2>/dev/null || echo 'No package.json found'",
	"framework": "static",
	"outputDirectory": ".",
	"public": true,
	"cleanUrls": true,
	"rewrites": [
		{
			"source": "/(.*)",
			"destination": "/templates/index.html"
		}
	],
	"env": {
		"NEXT_PUBLIC_API_URL": "@railway_api_url"
	}
}
